<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pizza"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/Foodie"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/archivo_black"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text=" Foodie"
        android:textAlignment="center"
        android:textColor="#47B5FF"
        android:background="@color/black"
        android:textSize="50dp"
        android:textStyle="bold" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Foodie"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#B68D40"
        android:gravity="center"
        android:padding="5dp"
        android:text="SEE THE MENUE" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/orderonline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:padding="10dp"
        android:text="ORDER ONLINE"
        android:backgroundTint="#B68D40"
        android:textColor="#FFFFFF" />


</RelativeLayout>